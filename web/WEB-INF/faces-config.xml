<?xml version="1.0" encoding="UTF-8" ?>
<faces-config
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                            http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
        version="2.0">
    <navigation-rule>
        <from-view-id>/admin/login.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>SUCCESS</from-outcome>
            <to-view-id>/admin/listItems.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>DENIED</from-outcome>
            <to-view-id>/admin/denied.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admin/modifyItem.xhtml</from-view-id>
        <navigation-case>
            <to-view-id>/admin/listItems.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admin/adjustItem.xhtml</from-view-id>
        <navigation-case>
            <to-view-id>/admin/listItems.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admin/createItem.xhtml</from-view-id>
        <navigation-case>
            <to-view-id>/admin/listItems.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
